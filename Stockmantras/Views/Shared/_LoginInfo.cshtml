<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

<link href="~/css/site.css" rel="stylesheet" />
<style>
    a:hover {
        background-color: brown;
    }
    
    .hidden-text {
        display: inline-block;
        visibility: hidden;
    }
</style>
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
    <div>
        
        <ul class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-labelledby="navbarDropdown" style="color:yellow;">
                Welcome @User.Identity.Name
            </a>

            <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Home">Change Password</a>
            <a class="dropdown-item" asp-action="LogOut" asp-controller="Home">Logout</a>
            
        </ul>
    </div>

}
else
{
    <a class="nav-link" asp-controller="Home" asp-action="Index" style="color:white;">Home</a>
    <a class="nav-link" asp-controller="Home" asp-action="PrivacyPolicy" style="color:white;">Privacy Policy</a>
    <a class="nav-link" asp-controller="Home" asp-action="AboutUs" style="color:white;">About Us</a>
    <a class="nav-link" asp-controller="Home" asp-action="ContactUs" style="color:white;">Contact Us</a>
    <ul class="nav-item align-content-lg-end border-5">

    <a href="#" class="nav-link" style="color: yellow;" data-toggle="modal" data-target="#loginModal">
        <span style="display: inline-block; vertical-align: middle;">Login</span>
        <span class="material-icons" style="display: inline-block; vertical-align: middle;">login</span>
    </a>

</ul>
    <ul class="nav-item align-content-lg-end">
        <a href="#" class="nav-link" style="color:yellow;" data-toggle="modal" data-target="#registerModal">
            <span style="display: inline-block; vertical-align: middle;">Register</span>
            <span class="material-icons" style="display: inline-block; vertical-align: middle;">account_box</span>
            
        </a>
    </ul>
}
