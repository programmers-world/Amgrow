@{
    var allcoins = ViewBag.AllCoins as IEnumerable<aryamoneygrow.Models.Coin>;
}


<head>
    <title>Buy and sell Coins</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .card {
            width: 300px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #f8f9fa;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

            .card-header h5 {
                margin-bottom: 5px;
            }

        .card-body {
            padding: 20px;
        }

        .card-logo {
            display: block;
            width: 100px;
            height: 100px;
            margin: 0 auto;
            margin-bottom: 15px;
            border-radius: 50%;
            background-color: #f8f9fa;
            text-align: center;
            line-height: 50px;
            font-size: 24px;
        }

        .card-description {
            margin-bottom: 15px;
        }

        .card-rating i {
            color: gold;
        }
    </style>

</head>

<body>


    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <input type="text" id="searchInput" class="form-control" placeholder="Search...">
            </div>
        </div>
        <div class="row" id="coinCards">
            @foreach (var fund in allcoins)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title">@fund.COIN_NAME</h5>
                        </div>
                        <div class="card-body">
                            <img src=@fund.COIN_PIC_URL alt="Logo" class="card-logo" />
                            <p class="card-description"> Description : @fund.COIN_DESC</p>
                            <p class="card-description"> Brief : @fund.COIN_BRIEF</p>
                            <p class="card-description"> Mint : @fund.COIN_MINT</p>
                            <p class="card-description"><b>Price : </b>INR @fund.COIN_PRICE</p>
                            <a asp-action="ContactUs" asp-controller="Home" class="btn btn-outline-primary btn-block"> Contact to Buy ... </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>




    <!-- Bootstrap JS (optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Font Awesome JS (optional) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('searchInput');
        const coinCards = document.querySelectorAll('.card-filter');

        searchInput.addEventListener('keyup', function (event) {
            const searchTerm = event.target.value.toLowerCase();
            coinCards.forEach(function (card) {
                const cardTitle = card.querySelector('.card-title').innerText.toLowerCase();
                const cardDescription = card.querySelectorAll('.card-description');

                let found = false;
                cardDescription.forEach(function (description) {
                    if (description.innerText.toLowerCase().includes(searchTerm)) {
                        found = true;
                    }
                });

                if (cardTitle.includes(searchTerm) || found) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    });
</script>
