<!--chart advance / declines-->
<script>
    // Define positive and negative counts
    var positiveCount = 0; // Replace with your actual positive count
    var negativeCount = 0; // Replace with your actual negative count

    // Calculate counts from stock data
    @foreach (var stock in ViewBag.Nifty50Stocks_list)
    {
        var difference = stock.LTP - stock.PREV_CLOSE;
        if (difference < 0)
        {
            @:negativeCount++; // Increment negative count
        }
        else if (difference > 0)
        {
            @:positiveCount++; // Increment positive count
        }
    }

    // Create data array for the chart
    var dataFromTable = [
        { "Advances:": positiveCount },
        { "Declines:": negativeCount }
    ];

    var labels = dataFromTable.map(item => Object.keys(item)[0]);
    var values = dataFromTable.map(item => Object.values(item)[0]);

    // Define colors (green for Advances, red for Declines)
    var colors = ['#00FF00', '#FF0000'];

    document.addEventListener("DOMContentLoaded", function () {
        var ctx = document.getElementById('niftyChart').getContext('2d');
        var myPieChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    data: values,
                    backgroundColor: colors
                }]
            },
            options: {
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                }
            }
        });
    });
</script>
