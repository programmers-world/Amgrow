@{Layout = "_Layout_users";}
@model aryamoneygrow.Models.BuyStock;

<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<div class="card">
    <div class="card bg-primary text-white"><strong>Buy More...</strong></div>
    <div class="card-body">
        <form asp-controller="User" asp-action="BuyMoreStocks" method="post">
            @{
                var p_value = Model.BuyPrice;
                var p_qty = Model.Quantity;
            }
            <div class="form-group">
                <label for="ScriptName">Trade Date:</label>
                <input type="date" asp-for="@Model.TRADE_DATE" class="form-control" />
                <span asp-validation-for="TRADE_DATE" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ScriptName">Script Name</label>
                <input type="text" asp-for="@Model.ScriptName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label for="TradeDate">Buy Price: </label>
                <input type="number" asp-for="@Model.BuyPrice" class="form-control" />
                <span asp-validation-for="BuyPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Quantity">Quantity: </label>
                <input type="number" asp-for="@Model.Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <input type="hidden" name="previous_qty" value="@p_qty" />
            <input type="hidden" name="previous_value" value="@p_value" />
            <br />
            <div class="text-danger">
                <span asp-validation-summary="All"></span>
            </div>
            <button type="submit" class="btn btn-primary">Buy</button>
        </form>
    </div>
</div>
