@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
    Layout = "_Layout_users";
}
else
{
    Layout = "_Layout";
}
@model aryamoneygrow.Models.MutualFund

@{
    ;
            var successMessage = TempData["FundSaved"] as string;
}
<h3>Add Fund</h3>

<style>
    /* Add custom styles to the form elements */

    /* Input fields */
    .form-control {
        border-radius: 4px;
        border-color: #ccc;
        box-shadow: none;
    }

    /* Labels */
    .form-label {
        font-weight: bold;
        color: #333;
    }

    /* Submit button */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    /* Apply overall styling to the form */
    .form-wrapper {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

        /* Apply spacing between form elements */
        .form-wrapper .form-group {
            margin-bottom: 15px;
        }
</style>
<div class="container form-control">
    <form asp-controller="User" asp-action="AddFund" method="post">
        <!-- Form fields and bindings -->
        <div class="row">
            <div class="col-md-3">
                <h5>Fund Name :</h5>
            </div>
            <div class="col-md-9">
                <input asp-for="FUND_NAME" class="col-md-9" />
                <span asp-validation-for="FUND_NAME" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <h5>Fund's Description :</h5>
            </div>
            <div class="col-md-9">
                <input asp-for="FUND_DESC" class="col-md-9" />
                <span asp-validation-for="FUND_DESC" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <h5>Logo's Url :</h5>
            </div>
            <div class="col-md-9">
                <input asp-for="FUND_LOGO_URL" class="col-md-9" />
                <span asp-validation-for="FUND_LOGO_URL" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <h5>Fund's Complete Detail Url :</h5>
            </div>
            <div class="col-md-9">
                <input asp-for="FUND_MORE_URL" class="col-md-9" />
                <span asp-validation-for="FUND_MORE_URL" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <h5> Rating (1 to 5) :</h5>
            </div>
            <div class="col-md-9">
                <input asp-for="RATING" class="col-md-9" />
                <span asp-validation-for="RATING" class="text-danger"></span>
            </div>
        </div>


        <!-- Submit button -->
        <div class="col-3"><button class="btn btn-outline-primary col-6" type="submit">Upload on Site </button></div>
    </form>
</div>

<!--to display success message-->
<script src="~/other_scripts/sweetAlert.min.js"></script>
<link href="~/other_scripts/sweetAlerts.min.css" rel="stylesheet" />

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var successMessage = "@successMessage";
        if (successMessage !== "") {
            Swal.fire({
                icon: "success",
                title: "Fund Added !",
                text: successMessage
            });
        }
    });
</script>